<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="mx-auto m-1">
        <%= form_with url: searches_search_path, method: :get, local: :true do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([['User'], ['Book']]) %>
          <%= f.select :search, options_for_select([[ "完全一致","perfect_match"], ["部分一致","partial_match"], ["前方一致","forward_match"],["後方一致","backward_match"]]) %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>